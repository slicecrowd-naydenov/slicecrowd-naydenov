{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement-test' -%}
    {%- if block.settings.link == blank -%}
      <div>
    {%- else -%}
      <a href="{{ block.settings.link }}" >
    {%- endif -%}

      <p>{{ block.settings.text | escape }}</p>

    {%- if block.settings.link == blank -%}
      </div>
    {%- else -%}
      </a>
    {%- endif -%}

  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "Announcement bar test 2",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement-test",
      "name": "Announcement bar test",
      "settings": [
        {
          "type": "checkbox",
          "id": "show_announcement",
          "label": "Show announcement",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "home_page_only",
          "label": "Home page only",
          "default": true
        },
        {
          "type": "text",
          "id": "text",
          "label": "Announcement text",
          "default": "Announce something here"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Announcement link"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement-test"
      }
    ]
  }
}
{% endschema %}